# Base de datos PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/gastro_chatbot_db"

# Configuración del servidor
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Seguridad
JWT_SECRET=your_super_secret_jwt_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración médica
EMERGENCY_KEYWORDS=dolor intenso,sangrado abundante,dificultad respirar,pérdida conciencia
MAX_CONVERSATION_LENGTH=50
AI_CONFIDENCE_THRESHOLD=0.7

# Notificaciones de emergencia
EMERGENCY_EMAIL=emergencias@gastrochatbot.com
EMERGENCY_WEBHOOK_URL=https://your-emergency-webhook.com

# Base de datos de respaldo (opcional)
BACKUP_DATABASE_URL=

# Configuración de desarrollo
DEV_ADMIN_EMAIL=admin@gastrochatbot.com
DEV_ADMIN_PASSWORD=admin123
