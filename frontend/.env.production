# API Configuration - Production
VITE_API_URL=https://api.gastro-chatbot.com/api
VITE_API_TIMEOUT=10000

# Environment
VITE_NODE_ENV=production

# Features
VITE_ENABLE_EMERGENCY_MODE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ERROR_REPORTING=true

# Medical Settings
VITE_EMERGENCY_PHONE=911
VITE_POISON_CONTROL=01-800-0147-47
VITE_CRUZ_ROJA=066
VITE_MEDICAL_DISCLAIMER_URL=https://gastro-chatbot.com/disclaimer

# Security
VITE_HIPAA_COMPLIANCE=true
VITE_ENCRYPTION_ENABLED=true
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=es

# Production Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true

# Analytics & Monitoring
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io
VITE_HOTJAR_ID=XXXXXXX

# Performance
VITE_ENABLE_COMPRESSION=true
VITE_BUNDLE_ANALYZER=false
VITE_PRELOAD_ROUTES=true

# Social & SEO
VITE_APP_NAME=GastroChatbot
VITE_APP_DESCRIPTION=Asistente médico inteligente para consultas gastroenterológicas
VITE_APP_URL=https://gastro-chatbot.com
VITE_SOCIAL_IMAGE=https://gastro-chatbot.com/og-image.png
